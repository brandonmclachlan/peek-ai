{
  "name": "peek",
  "version": "1.0.0",
  "description": "A simple mac MenuBar bar to peek at a browser",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "keywords": [
    "ChatGPT",
    "AI",
    "Menubar"
  ],
  "author": "Prateek Keshari",
  "license": "ISC",
  "dependencies": {
    "electron-context-menu": "^3.6.1",
    "electron-updater": "^4.6.5"
  },
  "devDependencies": {
    "electron": "^25.0.1",
    "electron-builder": "^24.4.0"
  },
  "build": {
    "appId": "com.example.peek",
    "productName": "Peek",
    "directories": {
      "buildResources": "build"
    },
    "mac": {
      "icon": "peek-dock.icns",
      "category": "public.app-category.utilities",
      "target": [
        "pkg",
        "zip"
      ]
    },
    "dmg": {
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "win": {
      "target": "nsis"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "linux": {
      "target": "AppImage"
    },
    "publish": {
      "provider": "github",
      "repo": "peek",
      "owner": "prateekkeshari",
      "releaseType": "draft"
    }
  }
}
